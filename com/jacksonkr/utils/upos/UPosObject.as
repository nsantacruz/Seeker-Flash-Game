package com.jacksonkr.utils.upos{	import flash.display.DisplayObjectContainer;	import flash.display.DisplayObject;		public class UPosObject {		public var anchorX:String;		public var anchorY:String;		public var item:DisplayObject;		/**		 * itemContainer is typically the parent, but it's allowed to be overridden 		 * incase you want to anchor the object to a different or 		 * unrelated DisplayObject.		 */		public var itemContainer:DisplayObjectContainer;		public var offsetX:Number;		public var offsetY:Number;		public var type:String;				public function UPosObject(item:DisplayObject, itemContainer:DisplayObjectContainer=null, type:String="anchor", anchor_x:String="left", anchor_y:String="bottom") {			this.item = item;			if(itemContainer) this.itemContainer = itemContainer;			else this.itemContainer = item.parent;			this.type = type;			this.anchorX = anchor_x;			this.anchorY = anchor_y;		}	}}