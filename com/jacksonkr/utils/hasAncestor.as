package com.jacksonkr.utils {	/**	 * Checks to see if an object (usually a displayobject) has an ancestor of the specified Object.	 *	 * <p>jacksonkr.com &lt;rollins.jackson@gmail.com&gt;</p>	 *	 * @param child The child Object where the recursive check starts	 * @param paren The parent Object to be searched for. I decided to use "paren" instead of 	 * "parent" because of the associated namespace issues.	 *	 * @return true when the child has that ancestor. false when the child does not have that ancestor 	 */	public function hasAncestor(child:Object, paren:Object):Boolean {		var p:Object = child.parent;		while(p) {			if(p == paren) return true;			p = p.parent;		}		return false;	}