package com.jacksonkr.utils {	import flash.display.DisplayObject;		/**	 * extends DisplayObject because that's the broadest element I could think of.	 * Obviously, you can strip this as desired.	 */	public class StaticListener extends DisplayObject {		protected static var _listeners:Array = [];				public function StaticListener() {			for each(var l:Listener in _listeners) {				this.addEventListener(l.type, l.func);			}		}		public static function addEventListener(type:String, func:Function):void {			_listeners.push(new Listener(type, func));		}		public static function removeEventListener():void {			throw new Error("not implemented yet");		}	}	}class Listener {	public var type:String;	public var func:Function;		public function Listener(type:String, func:Function) {		this.type = type;		this.func = func;	}}